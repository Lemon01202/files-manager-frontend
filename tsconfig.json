{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "constants/*": ["constants/*"],
      "pages/*": ["pages/*"],
      "routes/*": ["routes/*"],
      "services/*": ["services/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"]
    },
    "jsx": "react"
  },
  "include": [
    "./src/**/*.ts*",
    "./src/**/*.js*"
  ],
  "exclude": [
    "node_modules"
  ]
}
